extends ../../layout.jade
block contenido
    div(class="container")
        for imagen in imagenes
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        a( class="img-link" href="/app/imagenes/#{imagen.id}")
                            h2= imagen.title
                        img(class="imgbox" src="../../../public/imagenes/#{imagen.id}.#{imagen.extension}")
                    .col-md-2
                    a(href="/app/imagenes/#{imagen.id}/edit" class="right-space") Editar
                    form(action="/app/imagenes/#{imagen._id}?_method=DELETE",method="POST" enctype="multipart/form-data" class="link")
                        input(type='submit', value='Eliminar')
